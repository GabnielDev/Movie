            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="5dp"
                android:background="#dddddd" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="5dp"
                android:background="#dddddd" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="5dp"
                android:background="#dddddd" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</com.facebook.shimmer.ShimmerFrameLayout>